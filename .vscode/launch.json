{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": ["${workspaceFolder}"]
        },
        {
            "name": "Firefox Debugger (does not work atm)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5173",
            "pathMappings": [
                {
                    "url": "http://localhost:5173",
                    "path": "${workspaceFolder}/frontend/"
                }
            ]
        },
        {
            "name": "Debug Frontend",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "${userHome}/.nvm/versions/node/v16.20.0/bin/npm",
            "runtimeArgs": [
                "--prefix",
                "${workspaceFolder}/frontend",
                "run-script",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.main",
            "args": [],
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}